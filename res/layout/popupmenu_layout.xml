<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#90FFFFFF"
    android:gravity="bottom|center_horizontal" >

    <TextView
        android:id="@+id/more_window_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dip"
        android:clickable="true"
        android:drawableTop="@drawable/fine"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="晴" />

    <TextView
        android:id="@+id/more_window_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dip"
        android:layout_toRightOf="@+id/more_window_local"
        android:clickable="true"
        android:drawableTop="@drawable/cloudy"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="多云"/>

    <TextView
        android:id="@+id/more_window_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/more_window_online"
        android:clickable="true"
        android:drawableTop="@drawable/shade"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="阴"/>

    <TextView
        android:id="@+id/more_window_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_local"
        android:layout_marginRight="30dip"
        android:clickable="true"
        android:drawableTop="@drawable/rain"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="雨"/>

    <TextView
        android:id="@+id/more_window_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_online"
        android:layout_marginRight="30dip"
        android:layout_toRightOf="@+id/more_window_collect"
        android:clickable="true"
        android:drawableTop="@drawable/thundershower"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="雷雨"/>

    <TextView
        android:id="@+id/more_window_external"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_delete"
        android:layout_toRightOf="@+id/more_window_auto"
        android:clickable="true"
        android:drawableTop="@drawable/snow"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="雪"/>

    <ImageView
        android:id="@+id/center_music_window_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_auto"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dip"
        android:paddingRight="31dp"
        android:layout_toRightOf="@+id/more_window_collect"
        android:layout_toLeftOf="@id/more_window_external"
        android:src="@drawable/tabbar_compose_background_icon_close" />

</RelativeLayout>
